application: psiphi [
  documentation: "Calculates phi and psi torsion angles from
                  protein coordinates"
  groups: "protein:3D structure"
  relations: "/edam/topic/0000126 Protein structure analysis"
  relations: "/edam/operation/0000249 Torsion angle calculation"
]

section: input [
  information: "Input section"
  type: "page"
]

  infile: infile [
    parameter: "Y"
    information: "Clean protein structure coordinates file"
    knowntype: "protein clean coordinates"
    relations:  "/edam/data/0001460 Protein tertiary structure"                     
  ]

endsection: input

section: required [
  information: "Required section"
  type: "page"
]

  integer: chainnumber [
    standard: "Y"
    information: "Number of the chain for which torsion angles
                  should be calculated"
    default: "1"
    minimum: "1"
    relations: "/edam/data/0001008 Polypeptide chain identifier"                                     
  ]

  integer: startresiduenumber [
    standard: "Y"
    information: "First residue in chain for which torsion
                  angles should be calculated"
    default: "1"
    minimum: "1"
    relations: "/edam/data/0001016 Sequence position"
  ]

  integer: finishresiduenumber [
    standard: "Y"
    information: "Last residue in chain for which torsion
                  angles should be calculated (1 = last residue)"
    default: "1"
    relations: "/edam/data/0001016 Sequence position"
  ]

endsection: required

section: advanced [
  information: "Advanced section"
  type: "page"
]

endsection: advanced

section: output [
  information: "Output section"
  type: "page"
]

  report: outfile [
    parameter: "Y"
    rformat: "table"
    multiple: "N"
    precision: "1"
    taglist: "float:phi float:psi"
    relations: "/edam/data/0001544 Ramachandran plot"                                       
  ]

endsection: output
