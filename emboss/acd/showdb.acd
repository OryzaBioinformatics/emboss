application: showdb [
  documentation: "Displays information on the currently
                  available databases"
  groups: "Display, Information"
]

section: input [
  information: "Input section"
  type: "page"
]

  string: database  [
    default: ""
    optional: "Y"
    prompt: "Name of a single database to give information on"
  ]

endsection: input

section: advanced [
  information: "Advanced section"
  type: "page"
]

  boolean: html  [
    optional: "Y"
    default: "N"
    prompt: "Format output as an HTML table"
  ]

  boolean: protein  [
    optional: "Y"
    default: "Y"
    prompt: "Display protein databases"
  ]

  boolean: nucleic  [
    optional: "Y"
    default: "Y"
    prompt: "Display nucleic acid databases"
  ]

  boolean: only  [
    default: "N"
    information: "Display the specified columns"
    help: "This is a way of shortening the command line if you only
           want a few things to be displayed. Instead of specifying: \
           '-nohead -notype -noid -noquery -noall' \
           to get only the comment output, you can specify \
           '-only -comment'"
  ]

  boolean: heading  [
    default: "@(!$(only))"
    prompt: "Display column headings"
  ]

  boolean: type  [
    default: "@(!$(only))"
    prompt: "Display 'type' column"
  ]

  boolean: id  [
    default: "@(!$(only))"
    prompt: "Display 'id' column"
  ]

  boolean: query  [
    default: "@(!$(only))"
    prompt: "Display 'qry' column"
  ]

  boolean: all  [
    default: "@(!$(only))"
    prompt: "Display 'all' column"
  ]

  boolean: fields  [
    optional: "Y"
    default: "N"
    prompt: "Display 'fields' column"
    help: "This displays the search fields that can be used on this
           database, other than the standard 'id' or 'acc' fields."
  ]

  boolean: comment  [
    default: "@(!$(only))"
    prompt: "Display 'comment' column"
  ]

  boolean: release  [
    optional: "Y"
    default: "N"
    prompt: "Display 'release' column"
  ]

endsection: advanced

section: output [
  information: "Output section"
  type: "page"
]

  outfile: outfile  [
    optional: "Y"
    default: "stdout"
    prompt: "Output database details to a file"
    help: "If you enter the name of a file here then this program will
           write the database details into that file."
  ]

endsection: output
