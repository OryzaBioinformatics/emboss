application: textsearch [
  documentation: "Search sequence documentation text. SRS and
                  Entrez are faster!"
  groups: "Display, Information"
]

section: input [
  information: "Input section"
  type: "page"
]

  seqall: sequence  [
    parameter: "Y"
  ]

endsection: input

section: required [
  information: "Required section"
  type: "page"
]

  string: pattern  [
    parameter: "Y"
    prompt: "Enter a pattern to search for"
    help: "The search pattern is a regular expression. Use a | to
           indicate OR. \
           For example: \
           human|mouse \
           will find text with either 'human' OR 'mouse' in the text"
  ]

endsection: required

section: advanced [
  information: "Advanced section"
  type: "page"
]

  boolean: casesensitive  [
    optional: "Y"
    default: "N"
    prompt: "Do a case-sensitive search"
  ]

endsection: advanced

section: output [
  information: "Output section"
  type: "page"
]

  boolean: html  [
    optional: "Y"
    default: "N"
    prompt: "Format output as an HTML table"
  ]

  boolean: only  [
    default: "N"
    information: "Display the specified columns"
    help: "This is a way of shortening the command line if you only
           want a few things to be displayed. Instead of specifying: \
           '-nohead -noname -nousa -noacc -nodesc' \
           to get only the name output, you can specify \
           '-only -name'"
  ]

  boolean: heading  [
    default: "@(!$(only))"
    information: "Display column headings"
  ]

  boolean: usa  [
    default: "@(!$(only))"
    information: "Display the USA of the sequence"
  ]

  boolean: accession  [
    default: "@(!$(only))"
    information: "Display 'accession' column"
  ]

  boolean: name  [
    default: "@(!$(only))"
    information: "Display 'name' column"
  ]

  boolean: description  [
    default: "@(!$(only))"
    prompt: "Display 'description' column"
  ]

  outfile: outfile  [
    parameter: "Y"
    extension: "textsearch"
    prompt: "Output sequence details to a file"
    help: "If you enter the name of a file here then this program will
           write the sequence details into that file."
  ]

endsection: output
