application: dbxcompress [
  groups: "Utils:Database indexing"
  documentation: "Compress an uncompressed dbx index"
  gui: "no"
  batch: "no"
  cpu: "medium"
    relations: "EDAM_topic:0091 Data handling"
    relations: "EDAM_operation:0228 Data index analysis"
]

section: input [
  information: "Input section"
  type: "page"
]

  string: dbname [
    parameter: "Y"
    maxlength: "19"
    minlength: "2"
    information: "EMBOSS database name"
    knowntype: "emboss database name"
    pattern: "[A-z][A-z0-9_]+"
    relations: "EDAM_identifier:1056 Database name"
  ]

  string: field [
    parameter: "y"
    information: "EMBOSS database field"
    knowntype: "emboss database field"
    default: ""
    relations: "EDAM_data:2527 Parameter"
  ]

  directory: indexdir [
    default: ""
    information: "Index directory (optional)"
    knowntype: "emboss database index"
    relations: "EDAM_identifier:1049 Directory name"
    nullok: "Y"
    nulldefault: "Y"
  ]

endsection: input

section: required [
  information: "Required section"
  type: "page"
]

endsection: required

section: advanced [
  information: "Advanced section"
  type: "page"
]

endsection: advanced

section: output [
  information: "Output section"
  type: "page"
]

  outfile: outfile [
    standard: "y"
    name: "$(dbname)"
    knowntype: "dbxcompress output"
    relations: "EDAM_data:2048 Report"
  ]

endsection: output
