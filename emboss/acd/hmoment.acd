application: hmoment [
  documentation: "Hydrophobic moment calculation"
  groups: "Protein:2D Structure"
]

section: input [
  information: "Input section"
  type: "page"
]

  seqall: seqall  [
    parameter: "Y"
    type: "pureprotein"
  ]

endsection: input

section: advanced [
  information: "Advanced section"
  type: "page"
]

  integer: window  [
    optional: "Y"
    default: "10"
    information: "Window"
  ]

  integer: aangle  [
    default: "100"
    information: "Alpha helix angle (degrees)"
  ]

  integer: bangle  [
    optional: "Y"
    default: "160"
    information: "Beta sheet angle (degrees)"
  ]

  float: baseline  [
    default: "0.35"
    information: "Graph marker line"
  ]

endsection: advanced

section: output [
  information: "Output section"
  type: "page"
]

  boolean: plot  [
    default: "N"
    information: "Produce graphic"
  ]

  boolean: double  [
    default: "N"
    information: "Plot two graphs"
  ]

  xygraph: graph  [
    required: "$(plot)"
  ]

  outfile: outfile  [
    required: "@(!$(plot))"
    standardtype: "hmoment output"
  ]

endsection: output
