application: restover [
  documentation: "Find restriction enzymes producing a specific overhang"
  groups: "Nucleic:Restriction"
  relations: "/edam/topic/0000100 Nucleic acid restriction"
  relations: "/edam/operation/0000431 Restriction site identification"
]

section: input [
  information: "Input section"
  type: "page"
]

  seqall: sequence [
    parameter: "Y"
    type: "DNA"
    relations: "/edam/data/0001215 Pure DNA sequence"
    relations: "/edam/data/0000849 Sequence record" 
    relations: "/edam/data/0002178 1 or more" 
  ]

  datafile: datafile [
    default: ""
    information: "Restriction enzyme data file (optional)"
    knowntype: "restriction enzyme data"
    nullok: "Y"
    relations:  "/edam/data/0001518 Restriction enzyme pattern data"                
  ]

  datafile: mfile [
    default: "Emethylsites.dat"
    information: "Restriction enzyme methylation data file"
    knowntype: "restriction enzyme methylation data"
    relations:  "/edam/data/0001517 Restriction enzyme information"        
  ]

endsection: input

section: required [
  information: "Required section"
  type: "page"
]

  string: seqcomp [
    parameter: "Y"
    information: "Overlap sequence"
    knowntype: "nucleotide sequence"
    relations:  "/edam/data/0001210 Pure nucleotide sequence"
  ]

endsection: required

section: advanced [
  information: "Advanced section"
  type: "page"
]

  integer: min [
    minimum: "1"
    maximum: "1000"
    default: "1"
    information: "Minimum cuts per RE"
    relations: "/edam/data/0001773 Tool-specific parameter"
  ]

  integer: max [
    minimum: "$(min)"
    default: "2000000000"
    information: "Maximum cuts per RE"
    relations: "/edam/data/0001773 Tool-specific parameter"
  ]

  boolean: single [
    default: "N"
    information: "Force single site only cuts"
    relations: "/edam/data/0002135 Toggle"                                     
  ]

  boolean: threeprime [
    default: "N"
    information: "Use 3' overhang e.g. BamHI has CTAG as a 5'
                  overhang, and ApaI has CCGG as 3' overhang."
    relations: "/edam/data/0002135 Toggle"                                     
  ]

  boolean: blunt [
    default: "Y"
    information: "Allow blunt end cutters"
    relations: "/edam/data/0002135 Toggle"                                     
  ]

  boolean: sticky [
    default: "Y"
    information: "Allow sticky end cutters"
    relations: "/edam/data/0002135 Toggle"                                     
  ]

  boolean: ambiguity [
    default: "Y"
    information: "Allow ambiguous matches"
    relations: "/edam/data/0002135 Toggle"                                     
  ]

  boolean: plasmid [
    default: "N"
    information: "Allow circular DNA"
    relations: "/edam/data/0002135 Toggle"                                     
  ]

  boolean: methylation [
    default: "N"
    information: "Use methylation data"
    help: "If this is set then RE recognition sites will not match
           methylated bases."
    relations: "/edam/data/0002135 Toggle"                                     
  ]

  boolean: commercial [
    default: "Y"
    information: "Only enzymes with suppliers"
    relations: "/edam/data/0002135 Toggle"                                     
  ]

endsection: advanced

section: output [
  information: "Output section"
  type: "page"
]

  boolean: html [
    default: "N"
    information: "Create HTML output"
    outputmodifier: "Y"
    relations: "/edam/data/0002135 Toggle"                                     
  ]

  boolean: limit [
    default: "Y"
    information: "Limits reports to one isoschizomer"
    relations: "/edam/data/0002135 Toggle"                                     
  ]

  boolean: alphabetic [
    default: "N"
    information: "Sort output alphabetically"
    relations: "/edam/data/0002135 Toggle"                                     
  ]

  boolean: fragments [
    default: "N"
    information: "Show fragment lengths"
    relations: "/edam/data/0002135 Toggle"                                     
  ]

  outfile: outfile [
    parameter: "Y"
    knowntype: "restover output"
    relations:  "/edam/data/0001305 Restriction site report" 
  ]

endsection: output
