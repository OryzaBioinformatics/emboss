application: restover [
  documentation: "Finds restriction enzymes that produce a
                  specific overhang"
  groups: "Nucleic:Restriction"
]

section: input [
  information: "Input section"
  type: "page"
]

  seqall: sequence  [
    parameter: "Y"
    type: "DNA"
  ]

endsection: input

section: required [
  information: "Required section"
  type: "page"
]

  string: seqcomp  [
    parameter: "Y"
    information: "Overlap sequence"
  ]

endsection: required

section: advanced [
  information: "Advanced section"
  type: "page"
]

  integer: min  [
    minimum: "1"
    maximum: "1000"
    default: "1"
    information: "Minimum cuts per RE"
  ]

  integer: max  [
    minimum: "$(min)"
    maximum: "2000000000"
    default: "2000000000"
    information: "Maximum cuts per RE"
  ]

  boolean: single  [
    default: "N"
    information: "Force single site only cuts"
  ]

  boolean: threeprime  [
    default: "N"
    information: "3' overhang? (else 5') e.g. BamHI has CTAG as
                  a 5' overhang, and ApaI has CCGG as 3' overhang."
  ]

  boolean: blunt  [
    default: "Y"
    information: "Allow blunt end cutters"
  ]

  boolean: sticky  [
    default: "Y"
    information: "Allow sticky end cutters"
  ]

  boolean: ambiguity  [
    default: "Y"
    information: "Allow ambiguous matches"
  ]

  boolean: plasmid  [
    default: "N"
    information: "Allow circular DNA"
  ]

  boolean: commercial  [
    default: "Y"
    information: "Only enzymes with suppliers"
  ]

  string: datafile  [
    default: ""
    information: "Alternative RE data file"
  ]

endsection: advanced

section: output [
  information: "Output section"
  type: "page"
]

  boolean: html  [
    default: "N"
    information: "Create HTML output"
  ]

  boolean: limit  [
    default: "Y"
    information: "Limits reports to one isoschizomer"
  ]

  boolean: alphabetic  [
    default: "N"
    information: "Sort output alphabetically"
  ]

  boolean: fragments  [
    default: "N"
    information: "Show fragment lengths"
  ]

  boolean: name  [
    default: "N"
    information: "Show sequence name"
  ]

  outfile: outfile  [
    parameter: "Y"
  ]

endsection: output
