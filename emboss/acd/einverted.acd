application: einverted [
  documentation: "Finds DNA inverted repeats"
  groups: "Nucleic:Repeats, Nucleic:2D structure"
  gui: "yes"
  batch: "yes"
  cpu: "medium"
]

section: input [
  information: "Input section"
  type: "page"
]

  sequence: sequence  [
    parameter: "Y"
    type: "dna"
  ]

endsection: input

section: required [
  information: "Required section"
  type: "page"
]

  integer: gap  [
    default: "12"
    required: "Y"
    information: "Gap penalty"
  ]

  integer: threshold  [
    default: "50"
    required: "Y"
    information: "Minimum score threshold"
  ]

  integer: match  [
    default: "3"
    required: "Y"
    information: "Match score"
  ]

  integer: mismatch  [
    default: "-4"
    required: "Y"
    information: "Mismatch score"
  ]

endsection: required

section: advanced [
  information: "Advanced section"
  type: "page"
]

  integer: maxrepeat  [
    optional: "Y"
    default: "4000"
    information: "Maximum extent of repeats"
    help: "Maximum separation between the start of repeat and the end
           of the inverted repeat (the default is 4000 bases)."
  ]

endsection: advanced

section: output [
  information: "Output section"
  type: "page"
]

  outfile: outfile  [
    parameter: "Y"
    extension: "inv"
    standardtype: "inverted output"
  ]

endsection: output
