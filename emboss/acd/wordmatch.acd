application: wordmatch [
  documentation: "Finds regions of identity (exact matches) of two sequences"
  groups: "Alignment:Local"
  relations: "/edam/topic/0000159 Sequence comparison"
  relations: "/edam/operation/0000288 Sequence word comparison"
]

section: input [
  information: "Input section"
  type: "page"
]

  seqset: asequence [
    parameter: "Y"
    aligned: "N"  
    type: "any"                                         
    relations: "/edam/data/0000848 Sequence" 
    relations: "/edam/data/0000849 Sequence record" 
    relations: "/edam/data/0002178 1 or more" 
  ]

  seqall: bsequence [
    parameter: "Y"
    type: "@($(acdprotein) ? stopprotein : nucleotide)"
    relations: "/edam/data/0000848 Sequence"                                            
    relations: "/edam/data/0000849 Sequence record" 
    relations: "/edam/data/0002178 1 or more" 
  ]

endsection: input

section: required [
  information: "Required section"
  type: "page"
]

  integer: wordsize [
    standard: "Y"
    default: "4"
    minimum: "2"
    information: "Word size"
    relations: "/edam/data/0001250 Word size"
  ]

endsection: required

section: output [
  information: "Output section"
  type: "page"
]

  toggle: dumpalign [
    default: "Y"
    additional: "Y"
    information: "Dump matches as alignments"
    relations: "/edam/data/0002135 Toggle"                                     
  ]
  
  align: outfile [
    parameter: "Y"
    nullok: "@(!$(dumpalign))"
    aformat: "match"
    minseqs: "2"
    relations: "/edam/data/0001381 Pairwise sequence alignment"                    
  ]
 
  outfile: logfile [
    additional: "Y"
    default: "wordmatch.log"
    knowntype: "wordmatch log"
    information: "Wordmatch log output file"
    help: "Statistics on distribution of kmers and matches"
    relations:  "/edam/data/0001678 Tool log"
  ]
  
  toggle: dumpfeat [
    default: "Y"
    additional: "Y"
    information: "Dump matches as feature files"
    relations: "/edam/data/0002135 Toggle"                                     
  ]

  featout: aoutfeat [
    parameter: "Y"
    nullok: "@(!$(dumpfeat))"
    ofname: "$(asequence.name)"
    offormat: "gff"
    relations: "/edam/data/0001270 Sequence feature table"                              
  ]

  featout: boutfeat [
    parameter: "Y"
    ofname: "$(bsequence.name)"
    offormat: "gff"
    nullok: "@(!$(dumpfeat))"
    relations: "/edam/data/0001270 Sequence feature table"                              
  ]
 
endsection: output
