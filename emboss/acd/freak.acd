application: freak [
  documentation: "Generate residue/base frequency table or plot"
  groups: "Nucleic:Composition, Protein:Composition"
    relations: "EDAM:0000157 topic Sequence composition"
    relations: "EDAM:0000236 operation Sequence composition calculation"
]

section: input [
  information: "Input section"
  type: "page"
]

  seqall: seqall [
    parameter: "Y"
    type: "any"
    relations: "EDAM:0000849 data Sequence record"
  ]

endsection: input

section: required [
  information: "Required section"
  type: "page"
]

  string: letters [
    standard: "Y"
    default: "gc"
    information: "Residue letters"
    knowntype: "nucleotide sequence"
    relations: "EDAM:0001210 format pure nucleotide"
  ]

endsection: required

section: additional [
  information: "Additional section"
  type: "page"
]

  integer: step [
    additional: "Y"
    default: "1"
    information: "Stepping value"
    relations: "EDAM:0002141 data Window step size"
  ]

  integer: window [
    additional: "Y"
    default: "30"
    information: "Averaging window"
    relations: "EDAM:0001251 data Window size"
  ]

endsection: additional

section: output [
  information: "Output section"
  type: "page"
]

  toggle: plot [
    default: "N"
    information: "Produce graphic"
    relations: "EDAM:0002527 data Parameter or primitive"
  ]

  xygraph: graph [
    standard: "$(plot)"
    relations: "EDAM:0002166 data Sequence composition plot"
  ]

  outfile: outfile [
    standard: "@(!$(plot))"
    knowntype: "freak output"
    nullok: "$(plot)"
    nulldefault: "$(plot)"
    relations: "EDAM:0001261 data Sequence property (composition)"
  ]

endsection: output
