application: splitter [
  documentation: "Split a sequence into (overlapping) smaller
                  sequences"
  groups: "Edit"
]

section: input [
  information: "Input section"
  type: "page"
]

  seqall: sequence  [
    parameter: "Y"
    type: "any"
  ]

endsection: input

section: advanced [
  information: "Advanced section"
  type: "page"
]

  integer: size  [
    additional: "Y"
    minimum: "1"
    default: "10000"
    information: "Size to split at"
  ]

  integer: overlap  [
    additional: "Y"
    minimum: "0"
    maximum: "@($(size)-1)"
    default: "0"
    information: "Overlap between split sequences"
  ]

  boolean: addoverlap  [
    default: "N"
    information: "Add overlap to size"
  ]

endsection: advanced

section: output [
  information: "Output section"
  type: "page"
]

  seqoutall: outseq  [
    parameter: "Y"
  ]

endsection: output
