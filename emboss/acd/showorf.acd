application: showorf [
  documentation: "Display a nucleotide sequence and translation in
                  pretty format"
  groups: "Nucleic:Gene finding, Nucleic:Translation"
  relations: "/edam/topic/0000108 Transcription and translation"
  relations: "/edam/operation/0000371 DNA translation"
  relations: "/edam/operation/0000564 Sequence visualisation"
  relations: "/edam/operation/0000436 Coding region prediction"
]

section: input [
  information: "Input section"
  type: "page"
]

  sequence: sequence [
    parameter: "Y"
    type: "DNA"
    relations: "/edam/data/0000848 Sequence"
    relations: "/edam/data/0000849 Sequence record" 
  ]

endsection: input

section: required [
  information: "Required section"
  type: "page"
]

  list: frames [
    standard: "Y"
    default: "1,2,3,4,5,6"
    minimum: "0"
    maximum: "6"
    header: "Select Frames To Translate"
    values: "0: None, 1: F1,2: F2,3: F3,4: R1,5: R2,6: R3"
    delimiter: ","
    codedelimiter: ":"
    information: "Select one or more values"
    button: "Y"
    relations: "/edam/data/0002126 Translation frame specification"                                
  ]

endsection: required

section: additional [
  information: "Additional section"
  type: "page"
]

  list: table [
    additional: "Y"
    default: "0"
    minimum: "1"
    maximum: "1"
    header: "Genetic codes"
    values: "0:Standard; 1:Standard (with alternative initiation
             codons); 2:Vertebrate Mitochondrial; 3:Yeast Mitochondrial;
             4:Mold, Protozoan, Coelenterate Mitochondrial and
             Mycoplasma/Spiroplasma; 5:Invertebrate Mitochondrial; 6:Ciliate
             Macronuclear and Dasycladacean; 9:Echinoderm Mitochondrial;
             10:Euplotid Nuclear; 11:Bacterial; 12:Alternative Yeast Nuclear;
             13:Ascidian Mitochondrial; 14:Flatworm Mitochondrial;
             15:Blepharisma Macronuclear; 16:Chlorophycean Mitochondrial;
             21:Trematode Mitochondrial; 22:Scenedesmus obliquus;
             23:Thraustochytrium Mitochondrial"
    delimiter: ";"
    codedelimiter: ":"
    information: "Genetic code to use"
    relations: "/edam/data/0002128 Genetic code name"
  ]

endsection: additional

section: output [
  information: "Output section"
  type: "page"
]

  outfile: outfile [
    parameter: "Y"
    knowntype: "showorf output"
    relations:  "/edam/data/0001317 Nucleotide sequence translation report"              
  ]

  boolean: ruler [
    additional: "Y"
    default: "Y"
    information: "Add a ruler"
    relations: "/edam/data/0002135 Toggle"                                     
  ]

  boolean: plabel [
    additional: "Y"
    default: "Y"
    information: "Number translations"
    relations: "/edam/data/0002135 Toggle"                                     
  ]

  boolean: nlabel [
    additional: "Y"
    default: "Y"
    information: "Number DNA sequence"
    relations: "/edam/data/0002135 Toggle"                                     
  ]

  integer: width [
    minimum: "10"
    default: "50"
    information: "Width of screen"
    relations: "/edam/data/0001249 Sequence length"                                     
  ]

endsection: output
