application: acdrelations 
[
  documentation: "Add relations: attribute to ACD files"
  groups: "Acd"
  relations: "/edam/topic/0000220 File handling"
  relations: "/edam/operation/0000335 File reformatting"
]





section: input 
[
  information: "Input section"
  type: "page"
]

  dirlist: indir
  [
    parameter: "Y"
    information: "ACD file input directory"
    default: "acdin"
    extension: "acd"
  ]

  datafile: inedamfile 
  [
    parameter: "Y"
    information: "EDAM relations: file"
    default: "edamtoacd.dat"
  ]

  infile: intypefile 
  [
    parameter: "Y"
    information: "EMBOSS knowntypes.standard file"
    default: "/homes/jison/emboss/emboss/emboss/acd/knowntypes.standard"
  ]

endsection: input





section: required 
[
  information: "Required section"
  type: "page"
]
endsection: required





section: advanced 
[
  information: "Advanced section"
  type: "page"
]
endsection: advanced





section: output 
[
  information: "Output section"
  type: "page"
]
  outdir: outdir 
  [
    parameter: "Y"
    information: "ACD file output directory"
    extension: "acd"
    default: "acdout"
  ]

endsection: output
